<COMPONENT>
	<HEADER PLATEFORM="ALL" SERIAL="" VERSION="0.101" STATUS="ALPHA"
		COMPATIBILITY="ALL" AUTHOR="Talend" RELEASE_DATE="20070210A"
		STARTABLE="true">
		<SIGNATURE />
	</HEADER>

	<FAMILIES>
		<FAMILY>Internet/Kafka</FAMILY>
	</FAMILIES>

	<DOCUMENTATION>
		<URL />
	</DOCUMENTATION>

	<CONNECTORS>
		<CONNECTOR CTYPE="FLOW" MAX_INPUT="0" MAX_OUTPUT="0" />
		<CONNECTOR NAME="PARTITION" CTYPE="FLOW" MAX_INPUT="0"
			MAX_OUTPUT="0" />
		<CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="0" MAX_INPUT="0" />
		<CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
		<CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
		<CONNECTOR CTYPE="COMPONENT_OK" />
		<CONNECTOR CTYPE="COMPONENT_ERROR" />
		<CONNECTOR CTYPE="RUN_IF" />
	</CONNECTORS>

	<PARAMETERS>
		<!-- PARAMETER NAME="PROPERTY" FIELD="PROPERTY_TYPE" SHOW="true" NUM_ROW="1"/ -->

		<PARAMETER NAME="USE_EXISTING_CONNECTION" FIELD="CHECK"
			NUM_ROW="10">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="CONNECTION" FIELD="COMPONENT_LIST"
			REQUIRED="true" FILTER="tKafkaConnection" NUM_ROW="10"
			SHOW_IF="USE_EXISTING_CONNECTION == 'true'" />

		<PARAMETER NAME="KAFKA_VERSION" FIELD="CLOSED_LIST" NUM_ROW="15"
			REQUIRED="true" SHOW_IF="USE_EXISTING_CONNECTION == 'false'">
			<ITEMS DEFAULT="KAFKA_1_1_0">
				<ITEM NAME="KAFKA_1_1_0" VALUE="KAFKA_1_1_0" />
				<ITEM NAME="KAFKA_0_10_0_1" VALUE="KAFKA_0_10_0_1" />
				<ITEM NAME="KAFKA_0_9_0_1" VALUE="KAFKA_0_9_0_1" />
				<ITEM NAME="KAFKA_0_8_2_0" VALUE="KAFKA_0_8_2_0" />
			</ITEMS>
		</PARAMETER>

		<PARAMETER NAME="ZOOKEEPER_CONNECT" FIELD="TEXT" NUM_ROW="20"
			REQUIRED="true" SHOW_IF="(USE_EXISTING_CONNECTION == 'false')">
			<DEFAULT>"zk1:port1,zk2:port2,..."</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="TOPICACTION" FIELD="CLOSED_LIST" NUM_ROW="25">
			<ITEMS DEFAULT="CREATE_TOPIC">
				<ITEM NAME="CREATE_TOPIC" VALUE="CREATE_TOPIC" />
				<ITEM NAME="CREATE_IF_NOT_EXISTS" VALUE="CREATE_IF_NOT_EXISTS" />
				<ITEM NAME="ALTER_TOPIC" VALUE="ALTER_TOPIC" />
			</ITEMS>
		</PARAMETER>

		<PARAMETER NAME="KAFKA_TOPIC" FIELD="TEXT" REQUIRED="true"
			NUM_ROW="30">
			<DEFAULT>"mytopic"</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="KAFKA_REPLICATION" FIELD="TEXT" REQUIRED="true"
			NUM_ROW="31">
			<DEFAULT>1</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="KAFKA_PARTITION" FIELD="TEXT" REQUIRED="true"
			NUM_ROW="32">
			<DEFAULT>1</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="KAFKA_RETENTION_CHECK" FIELD="CHECK"
			REQUIRED="false" NUM_ROW="33">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="KAFKA_RETENTION" FIELD="TEXT"
			REQUIRED_IF="(KAFKA_RETENTION_CHECK == 'true')" NUM_ROW="33"
			SHOW_IF="(KAFKA_RETENTION_CHECK == 'true')">
			<DEFAULT>604800000</DEFAULT>
		</PARAMETER>

	</PARAMETERS>

	<ADVANCED_PARAMETERS>
		<PARAMETER NAME="ZOOKEEPER_SECURITY_IS_ENABLED" FIELD="CHECK"
			REQUIRED="false" NUM_ROW="35">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>
		<PARAMETER NAME="KAFKA_TOPIC_PROPERTIES" FIELD="TABLE"
			REQUIRED="false" NUM_ROW="40" NB_LINES="3">
			<ITEMS>
				<ITEM NAME="PROPERTY" />
				<ITEM NAME="VALUE" />
			</ITEMS>
		</PARAMETER>
	</ADVANCED_PARAMETERS>

	<CODEGENERATION>
		<IMPORTS>
			<!-- Kafka libraries for 2.10-0.8.2.0 -->
			<IMPORT MODULE_GROUP="KAFKA-LIB-2_10-0_8_2_0"
				REQUIRED_IF="(KAFKA_VERSION=='KAFKA_0_8_2_0') AND (USE_EXISTING_CONNECTION=='false')" />

			<!-- Kafka libraries for 2.10-0.9.0.1 -->
			<IMPORT MODULE_GROUP="KAFKA-LIB-2_10-0_9_0_1"
				REQUIRED_IF="(KAFKA_VERSION=='KAFKA_0_9_0_1') AND USE_EXISTING_CONNECTION=='false'" />

			<!-- Kafka libraries for 2.10-0.10.0.1 -->
			<IMPORT MODULE_GROUP="KAFKA-LIB-2_10-0_10_0_1"
				REQUIRED_IF="(KAFKA_VERSION=='KAFKA_0_10_0_1') AND USE_EXISTING_CONNECTION=='false'" />
				
			<!-- Kafka libraries for 2.11-1.1.0 -->
			<IMPORT MODULE_GROUP="KAFKA-LIB-2_11-1_1_0"
				REQUIRED_IF="(KAFKA_VERSION=='KAFKA_1_1_0') AND USE_EXISTING_CONNECTION=='false'" />
		</IMPORTS>
	</CODEGENERATION>
	<RETURNS />
</COMPONENT>
