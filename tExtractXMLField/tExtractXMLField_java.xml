<!-- $Id: tFileInputXML.xml 696 2006-11-23 05:45:10Z nrousseau $ -->
<COMPONENT>
  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="0.102"
    STATUS="ALPHA"

    COMPATIBILITY="ALL"
    AUTHOR="Talend"
    RELEASE_DATE="20050320A"
    STARTABLE="false"
    SCHEMA_AUTO_PROPAGATE="false"
    DATA_AUTO_PROPAGATE="false"
    HAS_CONDITIONAL_OUTPUTS="true"
    IS_MULTIPLYING_OUTPUTS="true"
	  PARTITIONING="AUTO"
    LOG4J_ENABLED="true"
  ><!---->
    <SIGNATURE/>
  </HEADER>

  <FAMILIES>
    <FAMILY>XML</FAMILY>
    <FAMILY>Processing/Fields</FAMILY>
  </FAMILIES>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="1" MAX_OUTPUT="1" MIN_OUTPUT="1"/>
    <CONNECTOR NAME="REJECT" NOT_SHOW_IF="(DIE_ON_ERROR == 'true')" CTYPE="FLOW" MAX_INPUT="1"
			MAX_OUTPUT="1" LINE_STYLE="2" COLOR="FF0000" BASE_SCHEMA="FLOW" />
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1"/>
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
    <CONNECTOR CTYPE="COMPONENT_OK"/>
    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
    <CONNECTOR CTYPE="RUN_IF"/>
  </CONNECTORS>

  <PARAMETERS>

	<PARAMETER
      NAME="PROPERTY"
      FIELD="PROPERTY_TYPE"
      SHOW="true"
      NUM_ROW="1"
      REPOSITORY_VALUE="XML"
    />

    <PARAMETER
      NAME="SCHEMA"
      FIELD="SCHEMA_TYPE"
      REQUIRED="true"
      NUM_ROW="2"
    >
      <!--SHOW_IF="PROPERTY_TYPE=='BUILT_IN'"-->
      <DEFAULT/>
    </PARAMETER>

    <PARAMETER
      NAME="XMLFIELD"
      FIELD="PREV_COLUMN_LIST"
      NUM_ROW="3"
    >
    </PARAMETER>

	<PARAMETER NAME="USE_ITEMS" FIELD="CHECK" REQUIRED="true" NUM_ROW="4" SHOW="false">
		<DEFAULT>false</DEFAULT>
	</PARAMETER>
	<PARAMETER
      NAME="LOOP_QUERY_BASE"
      FIELD="TEXT"
      NUM_ROW="4"
      SHOW="false"
    >
      <DEFAULT>""</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="LOOP_QUERY"
      FIELD="TEXT"
      NUM_ROW="4"
      REPOSITORY_VALUE="XPATH_QUERY"
    >
      <DEFAULT>"/bills/bill/line"</DEFAULT>
    </PARAMETER>

    <PARAMETER
      NAME="MAPPING"
      FIELD="TABLE"
      REQUIRED="true"
      NUM_ROW="5"
      NB_LINES="5"
      REPOSITORY_VALUE="XML_MAPPING"
    >
      <ITEMS BASED_ON_SCHEMA="true">
        <ITEM NAME="QUERY" REPOSITORY_ITEM="XML_QUERY" />
        <ITEM NAME="NODECHECK" FIELD="CHECK" VALUE="false"/>
      </ITEMS>
    </PARAMETER>

    <PARAMETER
      NAME="LIMIT"
      FIELD="TEXT"
      NUM_ROW="6"
      REQUIRED="false"
      REPOSITORY_VALUE="LIMIT"
    >
      <DEFAULT></DEFAULT>
    </PARAMETER>

	<PARAMETER NAME="DIE_ON_ERROR" FIELD="CHECK" NUM_ROW="30">
		<DEFAULT>false</DEFAULT>
	</PARAMETER>

	<PARAMETER NAME="SCHEMA_REJECT" FIELD="SCHEMA_TYPE"
		REQUIRED="true" NUM_ROW="44" CONTEXT="REJECT" SHOW="true">
		<TABLE READONLY="true">
			<COLUMN NAME="errorXMLField" TYPE="id_String" LENGTH="255"
				READONLY="false" CUSTOM="true" />
			<COLUMN NAME="errorCode" TYPE="id_String" LENGTH="255"
				READONLY="false" CUSTOM="true" />
			<COLUMN NAME="errorMessage" TYPE="id_String"
				LENGTH="255" READONLY="false" CUSTOM="true" />
		</TABLE>
	</PARAMETER>

	<PARAMETER NAME="USE_XML_FIELD" FIELD="CHECK" NUM_ROW="50" SHOW="false">
		<DEFAULT>false</DEFAULT>
	</PARAMETER>

	<PARAMETER NAME="XML_TEXT" FIELD="TEXT" NUM_ROW="50" SHOW="false">
		<DEFAULT>""</DEFAULT>
	</PARAMETER>

	<PARAMETER NAME="XML_PREFIX" FIELD="TEXT" NUM_ROW="60" SHOW="false">
		<DEFAULT>""</DEFAULT>
	</PARAMETER>

	<PARAMETER NAME="SCHEMA_OPT_NUM" FIELD="TEXT" NUM_ROW="90"
            REQUIRED="true" SHOW="false">
       	<DEFAULT>100</DEFAULT>
   	</PARAMETER>
   	
  </PARAMETERS>
  
    <ADVANCED_PARAMETERS>
	    <PARAMETER NAME="IGNORE_NS" FIELD="CHECK" REQUIRED="false" NUM_ROW="10">
	        <DEFAULT>false</DEFAULT>
	    </PARAMETER>
    </ADVANCED_PARAMETERS>

    <CODEGENERATION>
    <IMPORTS>
      <IMPORT
        NAME="Java_DOM4J1.6"
        MODULE="dom4j-1.6.1.jar" MVN="mvn:org.talend.libraries/dom4j-1.6.1/6.0.0"  UrlPath="platform:/plugin/org.talend.libraries.dom4j-jaxen/lib/dom4j-1.6.1.jar"
        REQUIRED="true"
        BundleID=""
      />
      <IMPORT
        NAME="Java_JAXEN1.1"
        MODULE="jaxen-1.1.1.jar" MVN="mvn:org.talend.libraries/jaxen-1.1.1/6.0.0"  UrlPath="platform:/plugin/org.talend.libraries.dom4j-jaxen/lib/jaxen-1.1.1.jar"
        REQUIRED="true"
        BundleID=""
      />
    </IMPORTS>
  </CODEGENERATION>

  <RETURNS>
    <RETURN NAME="NB_LINE" TYPE="id_Integer" AVAILABILITY="AFTER"/>
  </RETURNS>
</COMPONENT>
