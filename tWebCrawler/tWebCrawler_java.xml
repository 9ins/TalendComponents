<?xml version="1.0" encoding="UTF-8"?>
<COMPONENT>
	<HEADER 
       	AUTHOR="Kooin-Shin" 
   		PLATEFORM="ALL" 
   		SERIAL="" 
   		VERSION="0.1" 
  		COMPATIBILITY="ALL" 
   		RELEASE_DATE="20190320L"
   		SCHEMA_AUTO_PROPAGATE="true"  
   		STARTABLE="true" 
   		STATUS="BETA" 
   		LOG4J_ENABLED="true"
		> 
	<SIGNATURE/> 
  	</HEADER>
  	
	<FAMILIES> 
  		<FAMILY>ChaosToCosmos</FAMILY>
 	</FAMILIES>
 	 
 	<DOCUMENTATION> 
  		<URL>http://www.chaostocosmos.com</URL> 
  	</DOCUMENTATION>
  	 
  	<CONNECTORS> 
   		<CONNECTOR CTYPE="FLOW" MAX_INPUT="0" MAX_OUTPUT="1"/>
   		<CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1" />
		<CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
		<CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
		<CONNECTOR CTYPE="COMPONENT_OK" />
		<CONNECTOR CTYPE="COMPONENT_ERROR" />
		<CONNECTOR CTYPE="RUN_IF" />   		
  	</CONNECTORS> 
  	
	<PARAMETERS>
		<PARAMETER NAME="OUTPUT_SHCHMA" FIELD="SCHEMA_TYPE" GROUP="CRAWLER_CONFIG" REQUIRED="true" NUM_ROW="1">
			<TABLE>
				<COLUMN NAME="URL" TYPE="id_String" />
				<COLUMN NAME="KEYWORD" TYPE="id_String" />
				<COLUMN NAME="MATCH" TYPE="id_String" />
				<COLUMN NAME="HTML" TYPE="id_String" />
				<COLUMN NAME="TEXT" TYPE="id_String" />
				<COLUMN NAME="COOKIE" TYPE="id_String" />
				<COLUMN NAME="CHARSET" TYPE="id_String" />
				<COLUMN NAME="FILENAME" TYPE="id_String" />
				<COLUMN NAME="LAST_MODIFIED" TYPE="id_String" />
				<COLUMN NAME="CURRENT_DATE" TYPE="id_String" />
			</TABLE>
  		</PARAMETER>
		<PARAMETER NAME="SEARCH" FIELD="CLOSED_LIST" GROUP="CRAWLER_CONFIG" NUM_ROW="2">
			<ITEMS DEFAULT="CUSTOM">
				<ITEM NAME="CUSTOM" VALUE=""/> 
				<ITEM NAME="WIKIPEDIA" VALUE="https://www.wikipedia.org/wiki/"/>
				<ITEM NAME="NATURE" VALUE="https://www.nature.com/search?q="/>
				<ITEM NAME="TIME" VALUE="https://time.com/search/?q="/>
				<ITEM NAME="PEOPLE" VALUE="https://people.com/search?q="/>
				<ITEM NAME="CNET" VALUE="http://www.cnet.com/search?query="/>
				<ITEM NAME="GOOGLE" VALUE="https://www.google.com/search?q="/> 
				<ITEM NAME="BING" VALUE="https://www.bing.com/search?q="/>
				<ITEM NAME="YAHOO" VALUE="https://search.yahoo.com/search?q="/> 
				<ITEM NAME="TWITTER" VALUE="https://twitter.com/search?q="/> 			
				<ITEM NAME="YANDEX" VALUE="https://yandex.com/search/?text="/> 
				<ITEM NAME="NAVER" VALUE="https://search.naver.com/search.naver?query="/> 
				<ITEM NAME="DAUM" VALUE="https://search.daum.net/search?q="/>	 			
			</ITEMS>
		</PARAMETER>
		<PARAMETER NAME="WIKI_LANG" FIELD="CLOSED_LIST" GROUP="CRAWLER_CONFIG" NUM_ROW="2" SHOW_IF="(SEARCH == 'WIKIPEDIA')" REQUIRED="true">
			<ITEMS DEFAULT="KO">
				<ITEM NAME="KO" VALUE="ko"/> 
				<ITEM NAME="EN" VALUE="en"/>
				<ITEM NAME="ES" VALUE="es"/> 
				<ITEM NAME="DE" VALUE="de"/>
				<ITEM NAME="FR" VALUE="fr"/>
				<ITEM NAME="ZH" VALUE="zh"/>				
				<ITEM NAME="JA" VALUE="ja"/> 
				<ITEM NAME="RU" VALUE="ru"/> 
				<ITEM NAME="IT" VALUE="it"/> 
				<ITEM NAME="PT" VALUE="pt"/> 			
			</ITEMS>
		</PARAMETER>
		<PARAMETER NAME="SEARCH_KEYWORD" FIELD="TEXT" GROUP="CRAWLER_CONFIG" NUM_ROW="2" NOT_SHOW_IF="(SEARCH == 'CUSTOM')" REQUIRED="true">
			<DEFAULT>""</DEFAULT>
		</PARAMETER>		
		<PARAMETER NAME="URL" FIELD="TEXT" GROUP="CRAWLER_CONFIG" NUM_ROW="2" SHOW_IF="(SEARCH == 'CUSTOM')" REQUIRED="true">
			<DEFAULT>""</DEFAULT>
		</PARAMETER>
		<PARAMETER NAME="WEB_PAGE_KEYWORD" FIELD="TEXT" GROUP="CRAWLER_CONFIG" NUM_ROW="3">
			<DEFAULT>""</DEFAULT>
		</PARAMETER>
		<PARAMETER NAME="START_URL_RETRY" GROUP="CRAWLER_CONFIG" FIELD="TEXT" NUM_ROW="4">
     		<DEFAULT>3</DEFAULT>
    	</PARAMETER>		
		<PARAMETER NAME="CRAWLING_DEPTH" GROUP="CRAWLER_CONFIG" FIELD="TEXT" NUM_ROW="4">
     		<DEFAULT>2</DEFAULT>
    	</PARAMETER>		
		<PARAMETER NAME="CRAWLING_DURATION" GROUP="CRAWLER_CONFIG" FIELD="TEXT" NUM_ROW="4">
     		<DEFAULT>5</DEFAULT>
    	</PARAMETER>		
		<PARAMETER NAME="CRAWLING_DURATION_UNIT" FIELD="CLOSED_LIST" GROUP="CRAWLER_CONFIG" MAX_LENGTH="2" NUM_ROW="4">
			<ITEMS DEFAULT="MINUTES">
				<ITEM NAME="SECONDS" VALUE="SECONDS"/>
				<ITEM NAME="MINUTES" VALUE="MINUTES"/>
				<ITEM NAME="HOURS" VALUE="HOURS"/>
				<ITEM NAME="DAYS" VALUE="DAYS"/>
			</ITEMS>
		</PARAMETER>
		<PARAMETER NAME="THREAD_CORE_COUNT" FIELD="TEXT" GROUP="THREAD_POOL_CONFG" NUM_ROW="10">
     		<DEFAULT>10</DEFAULT>
    	</PARAMETER>	
		<PARAMETER NAME="THREAD_MAX_COUNT" FIELD="TEXT" GROUP="THREAD_POOL_CONFG" NUM_ROW="10">
     		<DEFAULT>30</DEFAULT>
    	</PARAMETER>	
		<PARAMETER NAME="KEEP_ALIVE_TIME" FIELD="TEXT" GROUP="THREAD_POOL_CONFG" NUM_ROW="10">
     		<DEFAULT>10</DEFAULT>
    	</PARAMETER>	
		<PARAMETER NAME="KEEP_ALIVE_TIME_UNIT" FIELD="CLOSED_LIST" GROUP="THREAD_POOL_CONFG" MAX_LENGTH="2" NUM_ROW="10">
			<ITEMS DEFAULT="SECONDS">
				<ITEM NAME="SECONDS" VALUE="SECONDS"/>
				<ITEM NAME="MINUTES" VALUE="MINUTES"/>
				<ITEM NAME="HOURS" VALUE="HOURS"/>
				<ITEM NAME="DAYS" VALUE="DAYS"/>
			</ITEMS>
		</PARAMETER>
		<PARAMETER NAME="TIMEOUT_SETTING" FIELD="CHECK" GROUP="CONNECTION_CONFIG" NUM_ROW="20">
    		<DEFAULT>false</DEFAULT>
	    </PARAMETER>	
		<PARAMETER NAME="CONNECT_TIMEOUT" FIELD="TEXT" GROUP="CONNECTION_CONFIG" NUM_ROW="21" SHOW_IF="(TIMEOUT_SETTING == 'true')">
     		<DEFAULT>15</DEFAULT>
    	</PARAMETER>
		<PARAMETER NAME="READ_TIMEOUT" FIELD="TEXT" GROUP="CONNECTION_CONFIG" NUM_ROW="21" SHOW_IF="(TIMEOUT_SETTING == 'true')">
     		<DEFAULT>60</DEFAULT>
    	</PARAMETER>	
		<PARAMETER NAME="USE_SAVE" FIELD="CHECK" NUM_ROW="30">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>
		<PARAMETER NAME="SAVE_PATH" FIELD="DIRECTORY" NUM_ROW="31" SHOW_IF="(USE_SAVE == 'true')">
			<DEFAULT>"./download"</DEFAULT>
		</PARAMETER>
	</PARAMETERS>
	
	<ADVANCED_PARAMETERS>
		<PARAMETER NAME="USE_ROBOT" FIELD="CHECK" NUM_ROW="1">
			<DEFAULT>true</DEFAULT>
		</PARAMETER>	
		<PARAMETER NAME="PROXY_YN" FIELD="CHECK" NUM_ROW="3">
     		<DEFAULT>false</DEFAULT>
    	</PARAMETER>    	
		<PARAMETER NAME="PROXY_IP" FIELD="TEXT" NUM_ROW="4" SHOW_IF="(PROXY_YN == 'true')">
     		<DEFAULT>""</DEFAULT>
    	</PARAMETER>    	
		<PARAMETER NAME="PROXY_PORT" FIELD="TEXT" NUM_ROW="4" SHOW_IF="(PROXY_YN == 'true')">
     		<DEFAULT>8080</DEFAULT>
    	</PARAMETER>    	
		<PARAMETER NAME="PROXY_AUTH_YN" FIELD="CHECK" NUM_ROW="10" SHOW_IF="(PROXY_YN == 'true')">
     		<DEFAULT>false</DEFAULT>
    	</PARAMETER>    	
		<PARAMETER NAME="PROXY_USER" FIELD="TEXT" NUM_ROW="11" SHOW_IF="(PROXY_YN == 'true') AND (PROXY_AUTH_YN == 'true')">
     		<DEFAULT>""</DEFAULT>
    	</PARAMETER>    	
		<PARAMETER NAME="PROXY_PASSWD" FIELD="TEXT" NUM_ROW="11" SHOW_IF="(PROXY_YN == 'true') AND (PROXY_AUTH_YN == 'true')">
     		<DEFAULT>""</DEFAULT>
    	</PARAMETER>
    	<PARAMETER FIELD="CHECK" NAME="DIE_ON_ERROR" NUM_ROW="50" >
			<DEFAULT>true</DEFAULT>
		</PARAMETER>    	
	</ADVANCED_PARAMETERS>	
	
	<CODEGENERATION> 
		<IMPORTS>
			<IMPORT NAME="webcrawler_1.0.0" MODULE="webcrawler_1.0.0.jar" REQUIRED="true"/>
			<!-- <IMPORT NAME="webcrawler-0.9.1" MODULE="webcrawler-0.9.1.jar" REQUIRED="true"/>  -->
		</IMPORTS>
	</CODEGENERATION>	
	
	<RETURNS>
		<RETURN NAME="NB_LINE" TYPE="id_Integer" AVAILABILITY="FLOW" />
	</RETURNS>
</COMPONENT>
