<?xml version="1.0" encoding="UTF-8"?>

<COMPONENT> 
  <HEADER AUTHOR="Jan Lolling" COMPATIBILITY="ALL" PLATEFORM="ALL" RELEASE_DATE="20180730" SERIAL="" STARTABLE="true" STATUS="PROD" VERSION="13.2"> 
    <SIGNATURE/> 
  </HEADER>  
  <FAMILIES> 
    <FAMILY>JSON</FAMILY> 
  </FAMILIES>  
  <DOCUMENTATION> 
    <URL/> 
  </DOCUMENTATION>  
  <CONNECTORS> 
    <CONNECTOR CTYPE="FLOW" MIN_INPUT="0" MAX_INPUT="0" MIN_OUTPUT="0" MAX_OUTPUT="1"/>  
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1"/>  
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1"/>  
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1"/>  
    <CONNECTOR CTYPE="COMPONENT_OK"/>  
    <CONNECTOR CTYPE="COMPONENT_ERROR"/>  
    <CONNECTOR CTYPE="RUN_IF"/> 
  </CONNECTORS>  
  <PARAMETERS> 
    <PARAMETER NAME="JSON_DOCUMENT" FIELD="COMPONENT_LIST" NUM_ROW="10" FILTER="REGEXP:^(tJSONDocOpen|tJSONDocOutput|tJSONDocInput|tJSONDocMerg|tJSONDocSave)(.)*" REQUIRED="true"/>  
    <PARAMETER NAME="USE_PARENT_AS_CURRENT_OBJECT" FIELD="CHECK" REQUIRED="true" NUM_ROW="20"> 
      <DEFAULT>false</DEFAULT> 
    </PARAMETER>  
    <PARAMETER NAME="PARENT_JSON_PATH" FIELD="TEXT" REQUIRED="true" NUM_ROW="20" SHOW_IF="USE_PARENT_AS_CURRENT_OBJECT == 'false'"> 
      <DEFAULT>"$"</DEFAULT> 
    </PARAMETER>  
    <PARAMETER NAME="PROVIDE_EMPTY_OUTPUT_IF_PARENT_DOES_NOT_EXISTS" FIELD="CHECK" REQUIRED="true" NUM_ROW="22"> 
      <DEFAULT>false</DEFAULT> 
    </PARAMETER>  
    <PARAMETER NAME="NOTE" FIELD="LABEL" NUM_ROW="23"> 
      <DEFAULT>This option helps in case of you want to provide missing attribute values in case of the parent object does not exist.</DEFAULT> 
    </PARAMETER>  
    <PARAMETER NAME="DIE_IF_PARENT_JSON_PATH_DOES_NOT_EXISTS" FIELD="CHECK" REQUIRED="true" NUM_ROW="24" SHOW_IF="PROVIDE_EMPTY_OUTPUT_IF_PARENT_DOES_NOT_EXISTS == 'false'"> 
      <DEFAULT>false</DEFAULT> 
    </PARAMETER>  
    <PARAMETER NAME="DIE_IF_PARENT_JSON_OBJECT_IS_EMPTY" FIELD="CHECK" REQUIRED="true" NUM_ROW="24" SHOW_IF="PROVIDE_EMPTY_OUTPUT_IF_PARENT_DOES_NOT_EXISTS == 'false'"> 
      <DEFAULT>false</DEFAULT> 
    </PARAMETER>  
    <PARAMETER FIELD="CLOSED_LIST" NAME="INPUT_STRUCTURE" NUM_ROW="30" REQUIRED="true"> 
      <ITEMS DEFAULT="ARRAY_OF_OBJECTS"> 
        <ITEM NAME="ARRAY_OF_OBJECTS" VALUE="ARRAY_OF_OBJECTS"/>  
        <ITEM NAME="ARRAY_OF_VALUES" VALUE="ARRAY_OF_VALUES"/>  
        <ITEM NAME="ARRAY_OF_ARRAYS" VALUE="ARRAY_OF_ARRAYS"/> 
      </ITEMS> 
    </PARAMETER>  
    <PARAMETER NAME="LABEL_ARRAY_OF_OBJECTS" FIELD="LABEL" COLOR="0;0;0" NUM_ROW="35" SHOW_IF="INPUT_STRUCTURE == 'ARRAY_OF_OBJECTS'"> 
      <DEFAULT>The input are objects which attributes are addressed here.</DEFAULT> 
    </PARAMETER>  
    <PARAMETER NAME="LABEL_ARRAY_OF_VALUES" FIELD="LABEL" COLOR="0;0;0" NUM_ROW="35" SHOW_IF="INPUT_STRUCTURE == 'ARRAY_OF_VALUES'"> 
      <DEFAULT>The input is an array of values in which every value causes a new outgoing row. Every used schema column get the same value.</DEFAULT> 
    </PARAMETER>  
    <PARAMETER NAME="LABEL_ARRAY_OF_ARRAYS" FIELD="LABEL" COLOR="0;0;0" NUM_ROW="35" SHOW_IF="INPUT_STRUCTURE == 'ARRAY_OF_ARRAYS'"> 
      <DEFAULT>The input are arrays of values. Every array represents one row. The values will be addressed by the schema column indexes. (aka. CSV mode)</DEFAULT> 
    </PARAMETER>  
    <PARAMETER NAME="COLUMN_CONFIG" FIELD="TABLE" NUM_ROW="40" NB_LINES="10"> 
      <ITEMS BASED_ON_SCHEMA="true"> 
        <ITEM NAME="ATTRIBUTE_ALIAS" FIELD="TEXT" SHOW_IF="INPUT_STRUCTURE != 'ARRAY_OF_ARRAYS'"/>  
        <ITEM NAME="ARRAY_INDEX" FIELD="TEXT" SHOW_IF="INPUT_STRUCTURE == 'ARRAY_OF_ARRAYS'"/>  
        <ITEM NAME="USE" FIELD="CHECK"/>  
        <ITEM NAME="MISSING_ATTRIBUTE_ALLOWED" FIELD="CHECK"/>  
        <ITEM NAME="MISSING_ATTRIBUTE_REPLACEMENT" FIELD="TEXT"/> 
      </ITEMS> 
    </PARAMETER>  
    <PARAMETER NAME="PROVIDE_VALUES_AS_COMMA_SEP_LIST" FIELD="CHECK" REQUIRED="true" NUM_ROW="45"> 
      <DEFAULT>false</DEFAULT> 
    </PARAMETER>  
    <PARAMETER NAME="PROVIDE_VALUES_AS_COMMA_SEP_LIST_SQL" FIELD="CHECK" REQUIRED="true" NUM_ROW="45" SHOW_IF="PROVIDE_VALUES_AS_COMMA_SEP_LIST == 'true'"> 
      <DEFAULT>false</DEFAULT> 
    </PARAMETER>  
    <PARAMETER NAME="SCHEMA" FIELD="SCHEMA_TYPE" REQUIRED="false" NUM_ROW="50"> 
      <DEFAULT/> 
    </PARAMETER> 
  </PARAMETERS>  
  <ADVANCED_PARAMETERS> 
    <PARAMETER NAME="DEFAULT_LOCALE" FIELD="TEXT" NUM_ROW="10"> 
      <DEFAULT>"en_UK"</DEFAULT> 
    </PARAMETER>  
    <PARAMETER NAME="RELEASE_LABEL_20180730" FIELD="LABEL" COLOR="0;0;0" NUM_ROW="900">
      <DEFAULT>Release: 13.2 build at: 20180730</DEFAULT>
    </PARAMETER>
  </ADVANCED_PARAMETERS>  
  <CODEGENERATION> 
    <IMPORTS/> 
  </CODEGENERATION>  
  <RETURNS> 
    <RETURN AVAILABILITY="AFTER" NAME="NB_LINE" TYPE="id_Integer"/>  
    <RETURN AVAILABILITY="FLOW" NAME="COUNT_OBJECTS" TYPE="id_Integer"/>  
    <RETURN AVAILABILITY="AFTER" NAME="CURRENT_NODE" TYPE="id_Object"/>  
    <RETURN AVAILABILITY="FLOW" NAME="CURRENT_PATH" TYPE="id_String"/>  
    <RETURN AVAILABILITY="FLOW" NAME="PARENT_ATTRIBUTE_EXISTS" TYPE="id_Boolean"/>  
    <RETURN AVAILABILITY="FLOW" NAME="NB_NOT_NULL_ATTRIBUTES" TYPE="id_Integer"/>  
    <RETURN AVAILABILITY="AFTER" NAME="VALUES_AS_COMMA_SEP_LIST" TYPE="id_String"/> 
  </RETURNS>
</COMPONENT>
